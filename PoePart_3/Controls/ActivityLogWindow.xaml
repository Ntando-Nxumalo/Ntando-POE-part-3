<Window x:Class="PoePart_3.Controls.ActivityLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Log"
        Height="320"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="White" Margin="10">
        <StackPanel>
            <TextBlock Text="Recent Activity Log"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <ListBox x:Name="logListBox"
                     Height="200"
                     Background="#F0F0F0"
                     BorderThickness="1"
                     BorderBrush="Gray"
                     Padding="5"
                     FontSize="13"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Clear Log"
                        Width="90"
                        Margin="0,0,10,0"
                        Click="ClearLog_Click"/>
                <Button Content="Close"
                        Width="80"
                        Click="Close_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
